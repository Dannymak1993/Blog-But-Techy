<div class="container">
  {{#if blogs.length}}
    <h3>Your Blog Posts:</h3>
    <ul>
      {{#each blogs}}
        <li>
          <a href="/blog/{{id}}">{{name}}</a>
          <p>Posted on {{created_at}}</p>
          <button class="button" id="{{id}}">delete</button>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No blog posts available yet.</p>
  {{/if}}

  <a href="/dashboard/newblog" class="btn btn-primary">New Post</a>
</div>

<script src="/js/delete.js"></script>
