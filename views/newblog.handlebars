<div class="container">
  <form class="form" action="/api/blog" method="POST">

    <div class="form-group">
      <label for="blog-title">Blog Title</label>
      <input class="form-input" type="text" id="blog-title" name="title" />
    </div>
    <div class="form-group">
      <label for="post-content">Post Content</label>
      <textarea class="form-input" id="post-content" name="post-content" rows="6"></textarea>
      <button id="post-button" type="submit">Post</button>
    </div>
  </form>
</div>

<script src="/js/post.js"></script>
